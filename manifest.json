{
   "manifest_version": 2,
   "name": "Prolific Assistant+",
   "version": "1.0.0",
   "permissions": [ "notifications", "webRequest", "webNavigation", "alarms", "storage", "activeTab", "https://*.prolific.co/*", "https://*.prolific.com/*" ],
   "background": {
      "persistent": true,
      "scripts": [ "pages/background.js" ]
   },
   "browser_action": {
      "default_icon": "mug.png",
      "default_popup": "pages/popup.html",
      "default_title": "Prolific Assistant+"
   },
   "content_scripts": [ {
      "js": [ "pages/contentScript.js" ],
      "matches": [ "https://app.prolific.co/*", "https://app.prolific.com/*" ],
      "run_at": "document_end"
   }, {
      "js": [ "pages/addEventListeners.js" ],
      "matches": [ "https://app.prolific.co/*", "https://app.prolific.com/*" ],
      "run_at": "document_idle"
   } ],
   "icons": {
      "128": "mug.png",
      "16": "mug.png",
      "19": "mug.png",
      "24": "mug.png",
      "32": "mug.png",
      "38": "mug.png",
      "48": "mug.png"
   }
}
